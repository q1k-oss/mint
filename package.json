{
  "name": "mint-format",
  "version": "1.0.0",
  "private": true,
  "description": "ğŸŒ¿ MINT Format - Minimal Inference Notation for Tokens",
  "keywords": [
    "mint",
    "format",
    "serialization",
    "llm",
    "token",
    "json",
    "yaml",
    "markdown",
    "tables",
    "ai",
    "minimal"
  ],
  "homepage": "https://github.com/mint-format/mint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mint-format/mint.git"
  },
  "license": "MIT",
  "author": "MINT Format Contributors",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "benchmark": "pnpm --filter benchmarks run benchmark",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky install",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}